{
  "app-id": "net.sourceforge.kmetronome",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.3",
  "sdk": "org.kde.Sdk",
  "command": "kmetronome",
  "rename-icon": "kmetronome",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=OFF",
        "-DBUILD_WIDGETS=OFF",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.7.0/drumstick-2.7.0.tar.bz2",
          "sha256": "61be52ad727964ad0827c5db9f10062e57ea2863ab7efd95113f416bc74a22d5"
        }
      ]
    },
    {
      "name": "kmetronome",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/kmetronome/kmetronome/1.3.1/kmetronome-1.3.1.tar.bz2",
          "sha256": "cebdf36819d422f81fd31871e68207ede48adc74ef91f309a841603ba0d2acff"
        }
      ]
    }
  ]
}
