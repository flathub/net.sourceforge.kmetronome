{
  "app-id": "net.sourceforge.kmetronome",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "kmetronome",
  "rename-icon": "kmetronome",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=OFF",
        "-DBUILD_WIDGETS=OFF",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.9.0/drumstick-2.9.0.tar.gz",
          "sha256": "b2692d3f96a1537ecf3a81dcad5c88ff700fc0af400dc2570cce19cb6cd1023a"
        }
      ]
    },
    {
      "name": "kmetronome",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/kmetronome/kmetronome/1.4.0/kmetronome-1.4.0.tar.bz2",
          "sha256": "e75b8500f474c6c637cfdac573c49d486bb869efd5cd4982d6a0bc44676de3c6"
        }
      ]
    }
  ]
}
